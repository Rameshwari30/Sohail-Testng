<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">


    <test verbose="2" preserve-order="true" name="Smoke test">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>

        <packages>
           <package name="testcases"/>
       </packages>
    </test>

    <test verbose="2" preserve-order="true" name="Regression test">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>

        <packages>
            <package name="Basics2"/>
            <package name="BasicsTestng"/>
        </packages>
    </test>


</suite>